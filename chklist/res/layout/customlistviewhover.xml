<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
          <item android:state_pressed="true">
              
              <shape android:shape="rectangle">
                  <stroke android:width="1dp" android:color="#ffffff"/>
            <corners android:radius="8dip"></corners>
			<padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <solid android:color="#a5a4a2" />
        	  </shape>
        
          </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#A1A6AB"/>
            <gradient android:angle="90" android:endColor="#DD2d2d2d" android:startColor="#A9A9A9"></gradient>
			<padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <corners android:radius="8dip"></corners>
        </shape>
        
        </item>

</selector>